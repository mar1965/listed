<div class="row">
  <div class="col-md-8">
    <div class="media">
      <div class="media-body">
        <h4 class="media-heading">Welcome <%= current_user.email %>!</h4>
        <%= render 'items/form', item: Item.new %>
        <% @items.each do |item| %>
          <div class="media">
            <div class="media-body">
              <p><%= item.name %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
